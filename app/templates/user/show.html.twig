{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
    <h1>User Details</h1>

    <table>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{{ user.roles|join(', ') }}</td>
        </tr>
    </table>

    <a href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>
    <a href="{{ path('user_delete', {'id': user.id}) }}">Delete</a>
{% endblock %}