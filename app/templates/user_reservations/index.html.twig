{% extends 'base.html.twig' %}

{% block title %}My Reservations{% endblock %}

{% block body %}
    <h1>My Reservations</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Reservation status</th>
            <th>Comment</th>
        </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td>{{ task.title }}</td>
                <td>{{ task.reservationStatus }}</td>
                <td>{{ task.reservationComment }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No Reservations ;(</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}